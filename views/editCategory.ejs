<%- include('./partials/header.ejs') %>


<section class="min-h-screen">
  <div class="container mx-auto py-8">
    <h1>
      Update Category
    </h1>

    <div class="flex w-full justify-between">
      <div class="w-2/5">
        <img src="<%= category.image; %>" class="w-full object-cover max-h-[600px] mb-4 rounded-md" alt="">
      </div>

      <div class="w-2/4">
        <form enctype="multipart/form-data">
          <input type="hidden" name="category" value="<%= category.name; %>">

          <div class="mb-5">
            <label for="name">
              Name*
            </label>
            <input value="<%= category.name; %>" name="name" type="text" placeholder="Chair, wardrobe...">

          </div>

          <div class="mb-5">
            <label for="description">
              Description
            </label>
            <textarea rows="5" name="description" id="description"><%= category.description; %></textarea>

          </div>

          <div class="mb-5">
            <label for="image">Image</label>
            <input type="file" name="image" />
          </div>
          <button type="submit">Update category</button>

          <div class="p-4 mb-4 mt-3 error-msg hidden text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert"></div>
          <div class="p-4 mt-3 success-msg mb-4 hidden text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            Category updated successfully!
          </div>
        </form>
      </div>
    </div>

    <div>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('form')

  form.addEventListener('submit', (e) => {
    e.preventDefault()
    resetForm()
    sendData(form, "/updateCategory?_method=PUT")
    form.reset()

    setTimeout(() => {
      location.reload()
    }, 1000)
  })
</script>

<%- include('./partials/footer.ejs') %>