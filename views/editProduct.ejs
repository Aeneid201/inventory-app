<%- include('./partials/header.ejs') %>


<section class="min-h-screen">
  <div class="container mx-auto py-8">
    <h1>
      Update Product
    </h1>

    <div class="flex w-full justify-between">
      <div class="w-2/5">
        <img src="<%= product.image; %>" class="w-full object-cover max-h-[600px] mb-4 rounded-md" alt="">
      </div>

      <div class="w-2/4">
        <form action="/updateProduct?_method=PUT" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="category" value="<%= product.slug; %>">

          <div class="mb-5">
            <label for="name">
              Name*
            </label>
            <input required value="<%= product.name; %>" name="name" type="text">

          </div>

          <div class="mb-5">
            <label for="description">
              Description*
            </label>
            <textarea required rows="5" name="description" id="description"><%= product.description; %></textarea>

          </div>

          <div class="mb-5">
            <label for="image">Image</label>
            <input type="file" name="image" />
          </div>
          <button type="submit">Update Product</button>
        </form>
      </div>
    </div>

    <div>
    </div>
  </div>
</section>


<%- include('./partials/footer.ejs') %>