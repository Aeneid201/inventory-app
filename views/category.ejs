<%- include('partials/header.ejs') %>


<section>
  <div class="container mx-auto py-8">
    <h1 class="text-3xl capitalize font-bold underline mb-5">
      <%= category.name; %>
    </h1>

    <div class="grid grid-cols-3 gap-4">
      <% products.map(product => {  %>
      <div class="relative">
        <a href="/product/<%= product.slug %>">
          <img src="<%= product.image %>" class="block mb-3 h-96 w-full object-cover" alt="<%= product.name %>">
          <h6 class="bg-orange-500 absolute left-2 top-2 inline-block capitalize text-white px-2 py-1 rounded-sm"><%= 'cat' %></h6>
          <h3 class="text-xl"><%= product.name %></h3>
        </a>
      </div>
      <% }); %>
    </div>

    <div class="mt-16">
      <%- category.description  %>
    </div>
  </div>
</section>


<%- include('partials/footer.ejs') %>