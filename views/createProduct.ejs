<%- include('./partials/header.ejs') %>


<section>
  <div class="container mx-auto py-8">
    <h1>
      Add a new product
    </h1>

    <div class="grid lg:grid-cols-2 gap-4 sm:grid-cols-1">
      <div>
        <img src="https://res.cloudinary.com/dstdwoljc/image/upload/v1726533681/sofa_qvdfpb.png" alt="">
      </div>
      <div>
        <form enctype="multipart/form-data">
          <div class="mb-5">
            <label for="name">
              Name*
            </label>
            <input name="name" type="text" placeholder="Name of the product">
          </div>

          <div class="mb-5">
            <label for="category">
              Category*
            </label>

            <select name="category" id="">
              <% categories.map(category => { %>
              <option value="<%= category.id %>"><%= category.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="mb-5">
            <label for="price">
              Price (in dollars)*
            </label>

            <input name="price" type="text" placeholder="500">
          </div>

          <div class="mb-5">
            <label for="description">
              Description
            </label>
            <textarea rows="5" name="description" id="description"></textarea>
          </div>

          <div class="mb-5">
            <label for="image">
              Image
            </label>
            <input type="file" name="image" />
          </div>

          <button type="submit">Add product</button>

          <div class="p-4 mb-4 mt-3 error-msg hidden text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert"></div>
          <div class="p-4 mt-3 success-msg mb-4 hidden text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            Product added successfully!
          </div>
        </form>
      </div>
    </div>

    <div>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('form')

  form.addEventListener('submit', (e) => {
    e.preventDefault()
    resetForm()
    sendData(form, "/addProduct")
    form.reset()
  })
</script>


