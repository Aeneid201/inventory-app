<%- include('./partials/header.ejs') %>


<section>
  <div class="container mx-auto py-8">
    <h1>
      Add a new category
    </h1>

    <div class="grid lg:grid-cols-2 gap-4 sm:grid-cols-1">
      <div>
        <img src="https://res.cloudinary.com/dstdwoljc/image/upload/v1726533681/sofa_qvdfpb.png" alt="">
      </div>

      <div>
        <form class="myForm" enctype="multipart/form-data">
          <div class="mb-5">
            <label for="name">Name*</label>
            <input name="name" type="text" placeholder="Chair, wardrobe...">
          </div>

          <div class="mb-5">
            <label for="description">
              Description
            </label>
            <textarea rows="5" name="description" id="description"></textarea>
          </div>

          <div class="mb-5">
            <label for="image">
              Image
            </label>
            <input type="file" name="image" />
          </div>

          <button type="submit">Submit</button>

          <div class="p-4 mb-4 mt-3 error-msg hidden text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert"></div>
          <div class="p-4 mt-3 success-msg mb-4 hidden text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            Category added successfully!
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector('.myForm')

  form.addEventListener('submit', (e) => {
    e.preventDefault()
    resetForm()
    sendData(form, "/addCategory")
    form.reset()
  })
</script>


