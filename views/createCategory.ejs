<%- include('./partials/header.ejs') %>


<section>
  <div class="container mx-auto py-8">
    <h1>
      Add a new category
    </h1>

    <div class="grid lg:grid-cols-2 gap-4 sm:grid-cols-1">
      <div>
        <img src="https://res.cloudinary.com/dstdwoljc/image/upload/v1726533681/sofa_qvdfpb.png" alt="">
      </div>

      <div>
        <form action="/addCategory" method="POST" enctype="multipart/form-data">
          <div class="mb-5">
            <label for="name">Name*</label>
            <input required name="name" type="text" placeholder="Chair, wardrobe...">
          </div>

          <div class="mb-5">
            <label for="description">
              Description*
            </label>
            <textarea required rows="5" name="description" id="description"></textarea>
          </div>

          <div class="mb-5">
            <label for="image">
              Image
            </label>
            <input type="file" name="image" />
          </div>

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>

    <div>
    </div>
  </div>
</section>


<%- include('./partials/footer.ejs') %>